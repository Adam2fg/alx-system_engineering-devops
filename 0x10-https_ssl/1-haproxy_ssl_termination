frontend www-https
    bind *:443 ssl crt /etc/letsencrypt/live/www.example.com/fullchain.pem
    mode http
    default_backend www-backend

backend www-backend
    mode http
    balance roundrobin
    option forwardfor
    http-request set-header X-Client-IP %[src]
    server web-01 127.0.0.1:80 check
